@model Entities.Persona.PersonaEdicionModel
@{
    ViewBag.Title = "Crear Usuario";
}
<div>
    <input type="submit" value="Guardar" class="btn btn-success" id="guardarFormulario" />
    <a class="btn btn-primary" href="@Url.Action("Edicion","Persona",new { id=0})">Crear Usuario</a>
    <a class="btn btn-primary" href="@Url.Action("Index","Persona")">Buscar</a>
    @if (Model.Id != 0)
    {
        <a class="btn btn-primary" href="@Url.Action("Coordinador","Coordinador",new { idpersona=Model.Id})">Asignar Coordinación</a>
        <a class="btn btn-primary" href="@Url.Action("Index","Persona")">Asignar Estudiante </a>
        <a class="btn btn-primary" href="@Url.Action("Index","Persona")">Asignar Asistente </a>
    }

</div>
<br />
<br />
<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Información Personal</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Información Academica</a>
    </li>
    
</ul>

<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">

    </div>
    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">Content for Profile tab.</div>
</div>

<br />
@using (Html.BeginForm("Guardar", "Persona", FormMethod.Post, new { @id = "formpersona" })) { 
    <input type="hidden" value="@Model.Id" name="Id"/>
<div class="row">
    <div class="col-sm-3">
        @Html.LabelFor(m => m.Idtipoidentificacion)
        @Html.DropDownListFor(m=>m.Idtipoidentificacion,Model.TiposIdentificacion,new { @class="form-control"})
    </div>
    <div class="col-sm-3">
        @Html.LabelFor(m=>m.Cedula)
        @Html.TextBoxFor(m=>m.Cedula, new { @class = "form-control" })
    </div>
    <div class="col-sm-3">
        @Html.LabelFor(m => m.Nombres)
        @Html.TextBoxFor(m => m.Nombres, new { @class = "form-control" })
    </div>
    <div class="col-sm-3">
        @Html.LabelFor(m => m.Apellidos)
        @Html.TextBoxFor(m => m.Apellidos, new { @class = "form-control" })
    </div>
</div>
<br />
<div class="row">
    <div class="col-sm-3">
        @Html.LabelFor(m => m.Idgenero)
        @Html.DropDownListFor(m => m.Idgenero, Model.Generos, new { @class = "form-control" })
    </div>
    <div class="col-sm-3">
        @Html.LabelFor(m => m.Fechanacimiento)
        @Html.TextBoxFor(m=>m.Fechanacimiento, new { @class = "form-control",@type="date" })
    </div>
    <div class="col-sm-3">
        @Html.LabelFor(m => m.Idpais)
        @Html.DropDownListFor(m => m.Idpais, Model.Paises, new { @class = "form-control" })
    </div>
    <div class="col-sm-3">
        @Html.LabelFor(m => m.Iddepartamento)
        @Html.DropDownListFor(m => m.Iddepartamento, Model.Departamentos, new { @class = "form-control" })
    </div>
</div>
<br />
<div class="row">
    <div class="col-sm-3">
        @Html.LabelFor(m => m.Idciudad)
        @Html.DropDownListFor(m => m.Idciudad, Model.Ciudades, new { @class = "form-control" })
    </div>
    <div class="col-sm-3">
        @Html.LabelFor(m=>m.Correo)
        @Html.TextBoxFor(m=>m.Correo, new { @class = "form-control" })
    </div>
    <div class="col-sm-3">
        @Html.LabelFor(m => m.Telefono)
        @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control" })
    </div>
</div>
}

<script>
    $("#guardarFormulario").on("click", function (e) {
        $("#formpersona").submit()
    })
</script>

