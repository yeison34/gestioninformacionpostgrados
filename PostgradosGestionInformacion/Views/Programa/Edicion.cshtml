@model Entities.Programa.ProgramaEditModel
@{
    ViewBag.Title = "Edición";
}

<style>
    body {
        background-image: url('@Url.Content("~/Images/images.jpeg")');
        background-size: cover;
        background-position: center;
    }
    .body {
        
    }
    .row{
        margin: 15px;
        font-size: 28px;
        color: black;
    }
    .boton{
        display:flex;
        align-items: center;
        justify-content:center;
    }
    .btn {
        font-size: 18px; 
        width: 200px; 
        height: 50px;
        border-radius: 10px;
    }
</style>
<div class = "body">
    @using (Html.BeginForm("Guardar", "Programa", FormMethod.Post))
    {
        <input type="hidden" value="@Model.Id" name="Id" />
        <div class="row">
            <div class="col-sm-3">
                @Html.LabelFor(p => p.Codigo)
                @Html.TextBoxFor(p => p.Codigo, new { @class = "form-control", required = "required" })
            </div>
            <div class="col-sm-3">
                @Html.LabelFor(p => p.Nombre)
                @Html.TextBoxFor(p => p.Nombre, new { @class = "form-control", required = "required" })
            </div>
            <div class="col-sm-3">
                @Html.LabelFor(p => p.IdFacultad)
                @Html.DropDownListFor(p => p.IdFacultad, Model.ListaFacultades, new { @class = "form-control", required = "required" })
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3">
                @Html.LabelFor(p => p.EsPregrado)
                @Html.CheckBoxFor(p => p.EsPregrado)
            </div>
            <div class="col-sm-3">
                @Html.LabelFor(p => p.EsPostgrado)
                @Html.CheckBoxFor(p => p.EsPostgrado)
            </div>
            <div class="col-sm-3">
                @Html.LabelFor(p => p.EsActivo)
                @Html.CheckBoxFor(p => p.EsActivo)
            </div>
        </div>
        <div class="boton">
            <button type="submit" class="btn btn-success">Guardar</button>
        </div>
     }
</div>
